INSTALL = /usr/bin/install -c
LIB_DIR = @LIB_DIR@

all: 
install:
	@echo "Installing $(LIB_DIR)..."
	mkdir -p $(LIB_DIR)/ascii
	for i in *.ascii; do             \
		$(INSTALL) "$$i" $(LIB_DIR)/ascii ;\
	done
uninstall:
	rm -rf $(LIB_DIR)

.PHONY: all run check gcov clean docs install uninstall dist gif
